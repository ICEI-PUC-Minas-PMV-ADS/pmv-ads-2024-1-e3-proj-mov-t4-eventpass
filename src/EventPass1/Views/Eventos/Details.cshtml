@model EventPass1.Models.Evento

@{
    ViewData["Title"] = "Details";
}

<div>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px">
        <p style="padding: 0; margin: 0; color: #000000; font-weight: bold; font-size: large;">
            DADOS DO EVENTO</p>
        <a class="nav-link-edit" asp-action="Edit" asp-route-id="@Model?.IdEvento"
            style="border: 1px solid black; color: black; font-weight: bold; border-radius: 5px; padding: 8px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil-fill"
                viewBox="0 0 16 16">
                <path
                    d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
            </svg>
            Editar evento
        </a>
    </div>
    <div class="content-image" style="margin: 0 0 20px 0;">
        <img src="/flyer/@Model.flyer" class="d-block w-100" alt="..." style="border-radius: 10px;" />
    </div>
    <div class="form-group">
        <dl>
            <div class="form-group">
                <dt>
                    @Html.DisplayNameFor(model => model.NomeEvento)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NomeEvento)
                </dd>
            </div>

            <div class="form-group">
                <dt>
                    @Html.DisplayNameFor(model => model.Data)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Data)
                </dd>
            </div>

            <div class="form-group">
                <dt>
                    @Html.DisplayNameFor(model => model.Hora)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Hora)
                </dd>
            </div>

            <div class="form-group">
                <dt>
                    @Html.DisplayNameFor(model => model.TotalIngressos)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TotalIngressos)
                </dd>
            </div>

            <div class="form-group">
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </div>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Index"
        style="margin-right: 10px; color: white; background-color: #f15a24; font-weight: bold; border: none; border-radius: 5px; padding: 8px;">
        Voltar
    </a>
</div>
